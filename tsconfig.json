{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/**/*",
    ],
    "lib": [ "dom", "es2015" ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}