{
  "name": "publisher-subscriber-react-hoc",
  "version": "1.0.2",
  "description": "React Higher-Order Component, which provides 'subscribe', 'unsubscribeAll', 'eventSubscribersCount', 'subscribersCount' methods. Can be used with various eventEmitters, including browser's 'window' object.",
  "main": "dist/index.js",
  "dependencies": {
    "publisher-subscriber-pattern": "2.0.4",
    "react": "16.9.0",
    "react-dom": "16.9.0"
  },
  "devDependencies": {
    "@babel/cli": "7.5.5",
    "@babel/core": "7.5.5",
    "@babel/plugin-proposal-class-properties": "7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "7.3.3",
    "@types/react": "16.9.2",
    "@types/react-dom": "16.9.0",
    "@typescript-eslint/eslint-plugin": "2.1.0",
    "@typescript-eslint/parser": "2.1.0",
    "babel-jest": "24.9.0",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.14.0",
    "eslint": "6.3.0",
    "eslint-config-prettier": "6.2.0",
    "jest": "24.9.0",
    "jest-enzyme": "7.1.1",
    "jsdom": "16.5.0",
    "prettier": "1.18.2",
    "typescript": "3.6.2"
  },
  "scripts": {
    "build": "rm -rf dist && babel src --out-dir ./dist --extensions '.ts,.tsx' && npm run build:declarations",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "npm run lint -- --fix",
    "build:declarations": "tsc -p tsconfig.declarations.json",
    "tsc:compile": "rm -rf dist && tsc -p tsconfig.json",
    "test": "jest",
    "test:watch": "npm run test -- --watch"
  },
  "keywords": [
    "react",
    "HOC",
    "higher order component",
    "provider",
    "consumer",
    "publisher",
    "subscriber",
    "publisher-subscriber",
    "pub-sub",
    "browser",
    "window",
    "addEventListener",
    "removeEventListener",
    "eventEmitter",
    "addListener",
    "removeListener",
    "publish",
    "subscribe",
    "unsubscribe",
    "events",
    "callbacks",
    "javascript",
    "typescript",
    "unit tests"
  ],
  "author": "Katarzyna Ziomek-Zdanowicz",
  "license": "ISC",
  "repository": "https://github.com/ziomecka/portfolio-publisher-subscriber-react-hoc.git"
}
